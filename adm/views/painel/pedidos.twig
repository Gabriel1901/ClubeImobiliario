{% extends "common/head-painel.twig" %}
{% block conteiner %}
<div class="container-fluid">
<div class="panel panel-default">
<div class="panel-heading">
<h3 class="panel-title"> Listando pedidos</h3>
</div>
<div class="panel-body">
<div class="well">
<div class="row">
<div class="col-sm-4">
<div class="form-group"><label class="control-label"
 for="input-order-id">Pedido n&ordm;</label>
<input name="filter_order_id" value=""
 placeholder="Pedido n&ordm;" id="input-order-id"
 class="form-control" type="text"></div>
<div class="form-group">
<label class="control-label" for="input-customer">Cliente</label>
<input name="filter_customer" value=""
 placeholder="Cliente" id="input-customer"
 class="form-control" autocomplete="off" type="text">
<ul class="dropdown-menu">
</ul>
</div>
</div>
<div class="col-sm-4">
<div class="form-group"><label class="control-label"
 for="input-order-status">Situa&ccedil;&atilde;o do
pedido</label>
<select name="filter_order_status" id="input-order-status"
 class="form-control">
<option value="*"></option>
<option value="0">Pedido abandonado</option>
<option value="16">Anulado</option>
<option value="7">Cancelado</option>
<option value="5">Completo</option>
<option value="11">Devolu&ccedil;&atilde;o</option>
<option value="2">Em processamento</option>
<option value="3">Enviado</option>
<option value="14">Expirado</option>
<option value="10">Falhou</option>
<option value="13">Incluso</option>
<option value="12">Invertido</option>
<option value="8">Negado</option>
<option value="1">Pendente</option>
<option value="15">Processado</option>
<option value="9">Reserva Cancelada</option>
</select>
</div>
<div class="form-group">
<label class="control-label" for="input-total">Total</label>
<input name="filter_total" value="" placeholder="Total"
 id="input-total" class="form-control" type="text"></div>
</div>
<div class="col-sm-4">
<div class="form-group"><label class="control-label"
 for="input-date-added">Cadastro</label>
<div class="input-group date"><input
 name="filter_date_added" value="" placeholder="Cadastro"
 data-date-format="YYYY-MM-DD" id="input-date-added"
 class="form-control" type="text">
<span class="input-group-btn">
</span></div>
</div>
<div class="form-group">
<label class="control-label" for="input-date-modified">Modifica&ccedil;&atilde;o</label>
<div class="input-group date"><input
 name="filter_date_modified" value=""
 placeholder="Modifica&ccedil;&atilde;o" data-date-format="YYYY-MM-DD"
 id="input-date-modified" class="form-control" type="text">
<span class="input-group-btn">
</span></div>
</div>
</div>
</div>
</div>
<form method="post" action=""
 enctype="multipart/form-data" id="form-order">
  <div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
    <tr>
      <td style="width: 1px;" class="text-center"><input
 onclick="$('input[name*=\'selected\']').prop('checked', this.checked);"
 type="checkbox"></td>
      <td class="text-right"><a class="asc">Pedido
n&ordm;</a></td>
      <td class="text-left"><a class="asc">Cliente</a></td>
      <td class="text-left"><a class="asc">Situa&ccedil;&atilde;o</a></td>
      <td class="text-right"><a class="asc">Total</a></td>
      <td class="text-left"><a class="asc">Cadastro</a></td>
      <td class="text-left"><a class="asc">Modifica&ccedil;&atilde;o</a></td>
      <td class="text-right">A&ccedil;&atilde;o</td>
    </tr>
    </thead>
    <tbody>
      <tr>
        <td class="text-center"><input name="selected[]"
 value="100" type="checkbox">
        <input name="shipping_code[]" value=""
 type="hidden"></td>
        <td class="text-right">100</td>
        <td class="text-left">fff fff</td>
        <td class="text-left">Pendente</td>
        <td class="text-right">R$3.000,00</td>
        <td class="text-left">15/01/2018</td>
        <td class="text-left">15/01/2018</td>
        <td class="text-right"><center><a href="#" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Editar"><i class="fa fa-pencil"></i></a></center></td>
      </tr>
    </tbody>
  </table>
  </div>
</form>
<div class="row">
<div class="col-sm-6 text-left"></div>
<div class="col-sm-6 text-right">Exibindo de 1 a 1 do
total de (1 p&aacute;ginas)</div>
</div>
</div>
</div>
</div>
{% endblock %}
