{% extends "common/head-painel.twig" %}

{% block conteiner %}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right"><a href="#" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Novo"><i class="fa fa-plus"></i></a>
                <button type="submit" form="form-product" formaction="#" data-toggle="tooltip" title="" class="btn btn-default" data-original-title="Copiar"><i class="fa fa-copy"></i></button>
                <button type="button" data-toggle="tooltip" title="" class="btn btn-danger" onclick="confirm('Esta ação não pode ser desfeita! Tem certeza que deseja continuar?') ? $('#').submit() : false;" data-original-title="Excluir"><i class="fa fa-trash-o"></i></button>
            </div>
            <h1>Painel do administrador</h1>
            <ul class="breadcrumb">
                <li><a href="#">Produtos</a></li>
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-list"></i> Listando produtos</h3>
            </div>
            <div class="panel-body">
                <div class="well">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="control-label" for="input-name">Produto</label>
                                <input type="text" name="filter_name" value="" placeholder="Produto" id="input-name" class="form-control" autocomplete="off">
                                <ul class="dropdown-menu">
                                </ul>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="input-model">Modelo</label>
                                <input type="text" name="filter_model" value="" placeholder="Modelo" id="input-model" class="form-control" autocomplete="off">
                                <ul class="dropdown-menu">
                                </ul>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="control-label" for="input-price">Preço</label>
                                <input type="text" name="filter_price" value="" placeholder="Preço" id="input-price" class="form-control">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="input-quantity">Quantidade</label>
                                <input type="text" name="filter_quantity" value="" placeholder="Quantidade" id="input-quantity" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="control-label" for="input-status">Situação</label>
                                <select name="filter_status" id="input-status" class="form-control">
                                    <option value="*"></option>
                                    <option value="1">Habilitado</option>
                                    <option value="0">Desabilitado</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="input-image">Imagem</label>
                                <select name="filter_image" id="input-image" class="form-control">
                                    <option value="*"></option>
                                    <option value="1">Habilitado</option>
                                    <option value="0">Desabilitado</option>
                                </select>
                            </div>
                            <button type="button" id="button-filter" class="btn btn-primary pull-right"><i class="fa fa-filter"></i> Filtrar</button>
                        </div>
                    </div>
                </div>
                <form action="#" method="post" enctype="multipart/form-data" id="form-product">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);"></td>
                                    <td class="text-center">Imagem</td>
                                    <td class="text-left"><a class="asc">Produto</a></td>
                                    <td class="text-left"><a class="asc">Modelo</a></td>
                                    <td class="text-right"><a class="asc">Preço</a></td>
                                    <td class="text-right"><a class="asc">Quantidade</a></td>
                                    <td class="text-left"><a class="asc">Situação</a></td>
                                    <td class="text-right">Ação</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="text-center"><input type="checkbox" name="selected[]" value="238"></td>
                                    <td class="text-center"><img src="http://www.casadosbanners.com.br/loja/image/cache/no_image-40x40.png" alt="" class="img-thumbnail"></td>
                                    <td class="text-left">Nome</td>
                                    <td class="text-left"></td>
                                    <td class="text-right"> 0.00 </td>
                                    <td class="text-right"><span class="label label-warning">0</span></td>
                                    <td class="text-left">Desabilitado</td>
                                    <td class="text-right"><a href="http://www.casadosbanners.com.br/loja/admin/index.php?route=catalog/product/edit&amp;token=nrKzUkJJmlIxBzvR4C5tOJkYndhxRpnS&amp;product_id=238" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Editar"><i class="fa fa-pencil"></i></a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </form>
                <div class="row">
                    <div class="col-sm-6 text-left">
                        <ul class="pagination">
                            <li class="active"><span>1</span></li>
                        </ul>
                    </div>
                    <div class="col-sm-6 text-right">Exibindo de 1 a 1 do total de (1 páginas)</div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 