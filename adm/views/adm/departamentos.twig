{% extends "common/head-painel.twig" %}

{% block conteiner %}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right"><a href="#" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Novo"><i class="fa fa-plus"></i></a> <a href="#" data-toggle="tooltip" title="" class="btn btn-default" data-original-title="Reconstruir"><i class="fa fa-refresh"></i></a>
                <button type="button" data-toggle="tooltip" title="" class="btn btn-danger" onclick="confirm('Esta ação não pode ser desfeita! Tem certeza que deseja continuar?') ? $('#').submit() : false;" data-original-title="Excluir"><i class="fa fa-trash-o"></i></button>
            </div>
            <h1>Painel do administrador</h1>
            <ul class="breadcrumb">
                <li><a href="#">Departamentos</a></li>
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-list"></i> Listando departamentos</h3>
            </div>
            <div class="panel-body">
                <form action="http://www.casadosbanners.com.br/loja/admin/index.php?route=catalog/category/delete&amp;token=nrKzUkJJmlIxBzvR4C5tOJkYndhxRpnS" method="post" enctype="multipart/form-data" id="form-category">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);"></td>
                                    <td class="text-left">                   <a class="asc">Departamento</a>
                                    </td>
                                    <td class="text-right">                    <a class="asc">Posição</a>
                                    </td>
                                    <td class="text-right">Ação</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="text-center">                    <input type="checkbox" name="selected[]" value="60">
                                    </td>
                                    <td class="text-left">Nome</td>
                                    <td class="text-right">0</td>
                                    <td class="text-right"><a href="#" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Editar"><i class="fa fa-pencil"></i></a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </form>
                <div class="row">
                    <div class="col-sm-6 text-left"><ul class="pagination"><li class="active"><span>1</span></li></ul></div>
                    <div class="col-sm-6 text-right">Exibindo de 1 a 1 do total de (1 páginas)</div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 